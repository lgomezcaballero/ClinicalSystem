@model DoctorViewModel

@{
    ViewData["Title"] = "Editar Medico";
}

<h1 class="text-center">Sistema Clinico</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">Lista de Medicos</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">

                    <!--ID del usuario como campo oculto-->
                    <input type="hidden" asp-for="ID" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DNI" class="control-label"></label>
                        <input asp-for="DNI" class="form-control" readonly />
                        <span asp-validation-for="DNI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto">Editar Medico</button>
                    </div>
                </form>
                <a asp-controller="Doctors" class="btn btn-primary" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>
